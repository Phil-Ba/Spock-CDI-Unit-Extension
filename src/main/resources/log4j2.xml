<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %logger{1} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="Console"/>
    </Root>

    <Logger level="debug" name="org.jglue" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>

    <Logger level="debug" name="at.bayava" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>

  </Loggers>
</Configuration>